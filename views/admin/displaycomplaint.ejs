<%-include('./layouts/header.ejs')%>
<%-include('./layouts/sidebar.ejs')%>



    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Main content -->
      <div class="content">
        <h1>Display Complaint</h1>
        <!-- /.card -->

        <div class="card">
          <div class="card-header">
            <h3 class="card-title"></h3>
          </div>
          <!-- /.card-header -->
          <div class="card-body">
            <table id="example1" class="table table-bordered table-striped">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Complain Type</th>
                  <th>Subject</th>
                  <th>Complaint Details</th>
                  <th>Status</th>
                  <th>Comment</th>
                  <th></th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% c.forEach((item)=>{ %>
                  <tr>
                    <td><%= item._id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.ctype %></td>
                    <td><%= item.subject %></td>
                    <td><%= item.cdetail %></td>
                    <td><%= item.status %></td>
                    <td>
                      <form action="/updatestatus/<%= item._id %>" method="post">
                        <textarea name="comment"></textarea>
                    </td>
                    <td>
                      <button type="submit" name="status" value="Solved" class=" btn btn-info">Solved</button>
                      <button type="submit" name="status" value="Rejected" class="btn btn-danger">Rejected</button>
                    </form>
                    </td>
                    <td>
                        <a href="/complaint/complaintview/<%= item._id %>" class="btn btn-info">View</a>
                        <a href="/complaint/complaintdelete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                  </tr>
             <%  }) %>
              </tbody>
              <tfoot>
                <tr>
                  <th>S.No</th>
                  <th>Complain Type</th>
                  <th>Semester</th>
                  <th>Subject</th>
                  <th>Complaint Details</th>
                  <th>Status</th>
                  <th>Comment</th>
                  <th></th>
                  <th>Action</th>
                </tr>
              </tfoot>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->

        <!--modal add student-->
      
        <!--modal end add student-->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <%-include('./layouts/footer.ejs')%>